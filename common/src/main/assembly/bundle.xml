<assembly>
  <id>bundle</id>

  <includeBaseDirectory>false</includeBaseDirectory>

  <formats>
    <format>zip</format>
  </formats>

  <fileSets>
    <fileSet>
      <directory>target/results</directory>
      <outputDirectory>pdf</outputDirectory>
      <includes>
        <include>*.pdf</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>target/results</directory>
      <outputDirectory>epub</outputDirectory>
      <includes>
        <include>*.epub</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>target/results</directory>
      <outputDirectory>html</outputDirectory>
      <includes>
        <include>*.html</include>
        <include>css/**/*</include>
        <include>images/**/*</include>
      </includes>
    </fileSet>
  </fileSets>

</assembly>
