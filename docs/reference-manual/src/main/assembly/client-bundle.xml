<assembly>
	<id>client-bundle</id>

	<includeBaseDirectory>false</includeBaseDirectory>

	<formats>
		<format>zip</format>
	</formats>

	<fileSets>
		<fileSet>
			<directory>target/docbkx/html</directory>
			<outputDirectory>html</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/docbkx</directory>
			<outputDirectory>html</outputDirectory>
			<includes>
				<include>slipstream.css</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/docbkx/ReferenceManual/images</directory>
			<outputDirectory>html/images</outputDirectory>
			<includes>
				<include>**/*.png</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>target/docbkx/pdf</directory>
			<outputDirectory>pdf</outputDirectory>
			<includes>
				<include>**/*.pdf</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>target/docbkx/epub</directory>
			<outputDirectory>epub</outputDirectory>
			<includes>
				<include>*.epub</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>target/docbkx/man</directory>
			<outputDirectory>man</outputDirectory>
			<excludes>
				<exclude>**/*.txt</exclude>
				<exclude>**/*.err</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>target/docbkx/man</directory>
			<outputDirectory>txt</outputDirectory>
			<includes>
				<include>**/*.txt</include>
			</includes>
		</fileSet>
	</fileSets>

</assembly>
